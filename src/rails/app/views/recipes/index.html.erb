<div class="section-heading">
  <h2>Recipes</h2>

  <ul class="actions">
    <li class="positive action">
      <%= link_to "New Recipe", new_recipe_path, :class => 'add icon' %>
    </li>
  </ul>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tfoot></tfoot>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
          <%= link_to recipe.name, recipe_path(recipe) %>
        </td>
      </tr>
    <% end  %>
  </tbody>
</table>